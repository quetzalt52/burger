<div class="container" >

  <div class="row">
    <img src="img/burger.jpg" alt="burger" width="150" height="150" class="img-responsive center-block">
    
  </div>
  </div> <!-- end of first row -->

  <div class="row">

    <div class="col-md-12">
      <h1>Eat-Da-Burger</h1>
    </div>
  
  </div> <!-- end second row -->

  <div class="row">

      <div class="col-md-6">
        
        <ul>
          {{#each burgers}}
            {{#unless this.devoured}}
              <li>
               <h5>{{this.id}}.{{this.burger_name}}
                <form class="mainPage" action="burgers/updateOne/{{this.id}}?_method=PUT" method="POST">
                  <input type="hidden" name="devoured" value="true">
                  
              </li>
            {{/unless}}
          {{/each}}
        </ul>
      </div>

    <div class="col-md-6">
          
          <ul>
            {{#each burgers}}
              {{#if this.devoured}}
                <li>
                  <h5>{{this.id}}.{{this.burger_name}}</h5>
                  <button align="center" class="btn btn-danger" type="submit">Devoured!</button>
                </li>
              {{/if}}
            {{/each}}
          </ul>
    </div>

  <div class="row">
    <div class="col-md-12 text-center">
      <form class="mainPage" action="/{{this.id}}?" method="POST">
        <div>
          <!-- <label for="bg">Burger Name:</label> -->
          
          <textarea type="text" name="name"></textarea><br>
            <button align="center" class="btn btn-danger" type="submit">Submit</button>
          <h5>Enter a burger you want to eat and click Submit!</h5>
        </div>
      </form>
    </div>
  </div> <!-- end fourth row -->

</div> <!-- end bootstrap container -->
